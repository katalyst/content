<li draggable="true"
    data-content-item
    data-content-item-id="<%= item.id %>"
    data-content-index="<%= item.index %>"
    data-content-depth="<%= item.depth %>"
    <%= "data-content-layout" if item.layout? %>
    data-deny-de-nest
    data-deny-nest
    data-deny-collapse
    data-deny-expand
    data-deny-remove
    data-deny-drag
    data-deny-edit>
  <%= yield %>
</li>

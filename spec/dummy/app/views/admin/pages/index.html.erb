<nav class="index-table-actions">
  <div class="item-actions">
    <%= link_to "Add", [:new, :admin, :page], class: "button button--primary" %>
  </div>
</nav>

<%= table_with collection: pages, sort: sort, class: "index-table" do |row, page| %>
  <%= row.cell :title do |cell| %>
    <%= link_to cell.value, [:admin, page] %>
  <% end %>
  <%= row.cell :slug, label: "Preview" do |cell| %>
    <%= link_to page_path(cell.value), page_path(cell.value) %>
  <% end %>
  <%= row.cell :actions, label: "" do |cell| %>
    <%= link_to "Edit", [:edit, :admin, page] %>
  <% end %>
<% end %>
